#!/bin/bash

export DATABASE_URL="postgres://${POSTGRES_ENV_POSTGRES_USERNAME}:${POSTGRES_ENV_POSTGRES_PASSWORD}@${POSTGRES_PORT_5432_TCP_ADDR}:${POSTGRES_PORT_5432_TCP_PORT}/${POSTGRES_ENV_POSTGRES_DATABASE}"
export REDIS_URL="redis://redis:${REDIS_ENV_REDIS_PASSWORD}@${REDIS_PORT_6379_TCP_ADDR}:${REDIS_PORT_6379_TCP_PORT}/${REDIS_ENV_REDIS_DATABASE}"

bundle exec sidekiq -r ./lib/application.rb
